<div id="user_nav">
	<% if current_user.nil? %>
    	<%= link_to "Sign in", sign_in_path(:back => request.env['PATH_INFO']) %> or <%= link_to "Sign up", sign_up_path(:back => request.env['PATH_INFO']) %>
   	<% else %>
   		Hi <%= link_to current_user.name, user_path(current_user) %> (<%= link_to "Sign out", sign_out_path(:back => request.env['PATH_INFO']) %>)
   	<% end %>
   	| <%= link_to "Leaderboard", users_path %>
   	| <%= link_to "Tags", tags_path %>
</div>
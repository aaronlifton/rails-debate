<h1>Leaderboard</h1>

<% if @users.size > 0 %>
  <table>
    <tr>
      <th>Name</th>
      <th>Points</th>
    </tr>
  
  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.name, user_path(user) %></td>
      <td><%= user.points %></td>
    </tr>
  <% end %>
  </table>
<% else %>
  <p>No users yet.</p>
<% end %>

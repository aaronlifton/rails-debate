<% content_for :left do %>
    <% if @tags.size > 0 %>
		<ul id="tags_filter">
			<li><%= link_to "All Topics", debates_path %></li>
			<% @tags.each do |tag| %>
			<li><%= link_to tag.name, tag_path(tag.name) %></li>
			<% end %>
		</ul>
   	 <% end %>
<% end %>

<% content_for :right do %>
    <div id="what_is_debatezone" class="explained round">
        <h3>New to DebateZone?</h3>    
        DebateZone is a rich community of debaters. Share your opinion on hot topics with the world. Refute other people's arguments. Get feedback on your viewpoints.
<% if current_user.nil? %><br /><%= link_to "Join now", sign_up_path %><% end %>
    </div>
	<form action="http://www.google.com/cse" id="cse-search-box">
	  <div>
	    <input type="hidden" name="cx" value="partner-pub-1634731507150308:7761300117" />
	    <input type="hidden" name="ie" value="UTF-8" />
	    <input type="text" name="q" size="28" />
	    <input type="submit" name="sa" value="Search" />
	  </div>
	</form>

	<script type="text/javascript" src="http://www.google.com/coop/cse/brand?form=cse-search-box&amp;lang=en"></script>

    <div id="sidebar">
   		<h3>Top Debates</h3>
		<ul id="top_debates" class="debates">
			<% @top_debates.each do |debate| %>
				<li>
					<%= link_to debate.name, debate_path(debate) %>
					<div class="meta"><%= debate.arguments.count %> arguments</div>
				</li>
			<% end %>
		</ul>
		<script type="text/javascript"><!--
		google_ad_client = "ca-pub-1634731507150308";
		/* debate-zone right square */
		google_ad_slot = "8434759122";
		google_ad_width = 250;
		google_ad_height = 250;
		//-->
		</script>
		<script type="text/javascript"
		src="http://pagead2.googlesyndication.com/pagead/show_ads.js">
		</script>
    </div>
<% end %>

<% if @debates.size > 0 %>
	<h2>Hot Debates</h2>
    <ul id="hot_debates" class="debates">
    	<%= render :partial => "debates/debate", :collection => @debates %>
    </ul>
    
   	<h2>Latest Debates</h2>
    <ul id="latest_debates" class="debates">
    	<%= render :partial => "debates/debate", :collection => @latest_debates %>
    </ul>
<% else %>
    <p>No debates yet.</p>
<% end %>
<div class="options round_bottom">
	<%= link_to "View all debates", debates_path %>
	&#183;  <%= link_to 'New Debate', new_debate_path %>
</div>